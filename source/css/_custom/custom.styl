// Custom styles.
.header { background-image: url("https://ws1.sinaimg.cn/large/694830ebgy1fh3pyd05klj21kw0f2dy2.jpg"); }
.menu {
  margin-top: 20px;
  padding-left: 0;
  text-align: center;
  background: rgba(255,255,255,0.65);
  margin-left: auto;
  margin-right: auto;
  width:450px;
  border-radius: initial;

}



.menu .menu-item {
  display: inline-block;
  margin: 0 10px;
  list-style: none;

  @media screen and (max-width: 767px) {
    margin-top: 10px;
  }

  a {
    display: block;
    font-size: 16px;
    text-transform: capitalize;
    line-height: inherit;
    border-bottom: 1px solid $menu-link-border;
    transition-property: border-color;
    the-transition();
    &:hover {
      border-bottom-color: $menu-link-hover-border;
      color: $menu-link-hover-border;
    }
  }

  .fa { margin-right: 5px; }
}

code {
  padding-left: 5px ;
  padding-right: 5px ;
  word-wrap: break-word;
  color: $code-foreground;
  border-radius: $code-border-radius;
  font-size $code-font-size;
  background-color: pink;
  margin: auto 2px;
  border-radius: 5px;
  display inline-block;
  box-shadow: 0.4px 0.5px 0.4px 0.4px #dddddd;
  
}
